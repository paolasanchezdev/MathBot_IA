# ==========================================================
# Archivo de Configuración de Entorno de Ejemplo (.env.example)
# NOTA: Los valores a continuación son placeholders (marcadores de posición).
# Debes crear un archivo llamado .env con tus valores reales y secretos.
# ==========================================================

# --- CONFIGURACIÓN DE INTELIGENCIA ARTIFICIAL ---
# Clave de API de OpenAI: debe obtenerse de https://platform.openai.com/api-keys
OPENAI_API_KEY="TU_CLAVE_SECRETA_DE_OPENAI_AQUI"


# --- CONFIGURACIÓN DE BASE DE DATOS POSTGRESQL ---
# Cambia usuario/contraseña según tu instalación local de PostgreSQL
DB_HOST=localhost
DB_PORT=5432
DB_NAME=mathbot_db
DB_USER="USUARIO_POSTGRESQL_AQUI"
DB_PASS="CONTRASEÑA_POSTGRESQL_AQUI"
DB_CLIENT_ENCODING=UTF8


# --- CONFIGURACIÓN DE SEGURIDAD Y JWT ---
# IMPORTANTE: Reemplaza por una cadena de texto larga y aleatoria
SECRET_KEY="UNA_CADENA_LARGA_Y_SECRETA_PARA_JWT"
JWT_ALGORITHM=HS256
# Tiempo de expiración del token de acceso en minutos
ACCESS_TOKEN_EXPIRE_MINUTES=1440


# --- CONFIGURACIÓN DE FUNCIONALIDAD DEL BACKEND ---
# Esquema de modelos a usar: full | simple
SCHEMA_MODE=simple
# Si es true, el chat exige que el usuario exista en DB
CHAT_REQUIRE_KNOWN_USER=false


# --- MAPEO DE TABLAS DE BASE DE DATOS ---
USERS_TABLE=usuarios
USERS_PK=id_usuario
USERS_EMAIL=email
USERS_PASSWORD_HASH=password_hash
USERS_NAME=nombre
USERS_ROLE=rol

ALUMNOS_TABLE=alumnos
ALUMNOS_PK=id_alumno
ALUMNOS_USER_FK=id_alumno
ALUMNOS_NIVEL=nivel
ALUMNOS_ANIO=bachillerato_anio
ALUMNOS_ESPECIALIDAD=especialidad


# --- NORMALIZACIÓN DE ROLES ---
ROLE_STUDENT=alumno
ROLE_TEACHER=docente
ROLE_ADMIN=admin